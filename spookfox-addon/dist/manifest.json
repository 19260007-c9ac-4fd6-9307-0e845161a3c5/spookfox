{
  "description": "Native messaging example add-on",
  "manifest_version": 2,
  "name": "Spookfox",
  "version": "0.1",
  "icons": {
    "48": "/icons/message.svg"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "spookfox@bitspook.in",
      "strict_min_version": "50.0"
    }
  },
  "background": {
    "scripts": [
      "/background.js"
    ]
  },
  "browser_action": {
    "default_icon": "/icons/message.svg"
  },
  "permissions": [
    "nativeMessaging",
    "tabs",
    "search"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval' blob: filesystem:;object-src 'self' blob: filesystem:;"
}