{
  "name": "spookfox",
  "version": "0.2.5",
  "license": "GPLv3",
  "scripts": {
    "start": "parcel serve src/manifest.json 'src/apps/*.ts'",
    "build": "parcel build src/manifest.json 'src/apps/*.ts'",
    "lint": "eslint src/ && tsc --noEmit",
    "build-addon": "yarn build && web-ext -s ./dist -a ./dist/addons build",
    "publish-unlisted-addon": "yarn build && web-ext -s ./dist -a ./dist/addons --api-key $FIREFOX_ADDON_KEY --api-secret $FIREFOX_ADDON_SECRET sign --channel=unlisted"
  },
  "devDependencies": {
    "@parcel/config-webextension": "^2.3.2",
    "@parcel/transformer-sass": "2.7.0",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-prettier": "^4.0.0",
    "parcel": "^2.7.0",
    "prettier": "^2.5.1",
    "typescript": "^4.5.5",
    "typescript-language-server": "^2.1.0",
    "web-ext": "^7.3.1",
    "web-ext-types": "^3.2.1"
  },
  "dependencies": {
    "immer": "^9.0.12",
    "uuid": "^8.3.2"
  }
}
